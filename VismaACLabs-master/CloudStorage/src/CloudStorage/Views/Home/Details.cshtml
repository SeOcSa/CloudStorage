@model DetailsViewModel

@{
    ViewBag.Title = Model.fileInfo.FileName;
}

<div class="page-header">
    <h1>@Model.fileInfo.FileName</h1>
</div>

@if (Model.fileInfo.FileContentType.Equals("image/png") || Model.fileInfo.FileContentType.Equals("image/jpg")
                                    || Model.fileInfo.FileContentType.Equals("image/jpeg") || Model.fileInfo.FileContentType.Equals("image/pjpeg") ||
                                    Model.fileInfo.FileContentType.Equals("image/gif") || Model.fileInfo.FileContentType.Equals("image/x-png") ||
                                    Model.fileInfo.FileContentType.Equals("image/png"))
{
    <div class="pull-right">
        <h4>Preview</h4>
        <div class="col-xs-8 col-md-3">
            <a href="#" class="thumbnail">
                <img src="@Model.photoUrl">
            </a>
        </div>
    </div>
}

<div class="col-lg-4">
    <div class="row">
        <div>
            <h4>Id</h4>
            <p>@Model.fileInfo.Id</p>
        </div>
    </div>
    
    <div class="row">
        <div>
            <h4>Description</h4>
            <p>@Model.fileInfo.Description</p>
        </div>
    </div>

    <div class="row">
        <div>
            <h4>File size in bytes</h4>
            <p>@Model.fileInfo.FileSizeInBytes</p>
        </div>
    </div>

    <div class="row">
        <div>
            <h4>Read only</h4>
            <p>
                @{
                    if (Model.fileInfo.ReadOnly)
                    {
                        <strong>yes</strong>
                    }
                    else
                    {
                        <strong>no</strong>
                    }
                }
            </p>
        </div>
    </div>

    <div class="row">
        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-primary btn-block">Go Back</a>
    </div>
</div>

